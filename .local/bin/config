#!/bin/bash
set -e
# this file lists some programs and the locations of their config file
locations=$HOME/.config/config.txt
program=`sed '/^$/ d;/#/ d' $locations | awk '{print $1}' | dmenu.sh -p "choose the program to config"`
filepath=`awk -v pro=$program '$1==pro {print $2}' $locations`
# change ~ to full path
filepath=${filepath/\~/$HOME}

[ $1 == "newterm" ] && alacritty -e vim $filepath || vim $filepath
